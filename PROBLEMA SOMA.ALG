Algoritmo "Problema Soma"
  // Exemplo1:   x = 8 e  y = 10
  // Exemplo2:   x = 12 e  y = 31


Var
   x , y , Soma : inteiro
   

Inicio

   escreval("Digite o valor de x: ")
   leia(x)
   escreval("Digite o valor de y: ")
   leia(y)
   Soma <- (x + y)
   escreval("")
   escreval("SOMA: " , soma)
   
   
Fimalgoritmo